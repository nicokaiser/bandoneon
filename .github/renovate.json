{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 4am on monday"],
  "baseBranches": ["develop"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "rangeStrategy": "bump",
      "matchPackageNames": ["!node", "!@types/node"]
    }
  ],
  "labels": ["dependencies"]
}
